  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haiyewei/grf-cli.git"
  },
  "homepage": "https://github.com/haiyewei/grf-cli#readme",
  "bugs": {
    "url": "https://github.com/haiyewei/grf-cli/issues"
  },
