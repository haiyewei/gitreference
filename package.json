  "main": "dist/cli.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "grf": "./dist/cli.js",
    "git-rf": "./dist/cli.js",
    "gitref": "./dist/cli.js"
  },
  "scripts": {
